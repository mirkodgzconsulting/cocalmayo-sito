---
import { Menu, X, ShoppingBag } from 'lucide-react';
import { Image } from 'astro:assets';
import logoImage from '../assets/images/Logo-Cocalmayo-PNG.png';

const links = [
  { name: 'Home', href: '/' },
  { name: 'Nosotros', href: '/nosotros' },
  { name: 'Productos', href: '/productos' },
  { name: 'Cont√°ctanos', href: '/contactanos' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed w-full z-50 transition-all duration-300 bg-[#2c2f8b]/95 backdrop-blur-md shadow-sm" id="navbar">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <div class="flex-shrink-0 flex items-center">
        <a href="/">
          <Image 
            src={logoImage} 
            alt="Cocalmayo Coffee Logo" 
            class="h-12 w-auto object-contain"
          />
        </a>
      </div>

      <!-- Desktop Menu -->
      <nav class="hidden md:flex space-x-8">
        {links.map((link) => (
          <a
            href={link.href}
            class={`text-sm font-medium transition-colors duration-200 hover:text-[#25D366] ${
              currentPath === link.href ? 'text-white font-bold' : 'text-gray-200'
            }`}
          >
            {link.name}
          </a>
        ))}
      </nav>

      <!-- Mobile Button -->
      <div class="md:hidden flex items-center">
        <button id="mobile-menu-btn" class="text-white hover:text-[#25D366] focus:outline-none">
          <Menu className="w-6 h-6" />
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden absolute top-20 left-0 w-full bg-white shadow-lg border-t border-gray-100">
    <div class="px-4 pt-2 pb-6 space-y-2">
      {links.map((link) => (
        <a
          href={link.href}
          class={`block px-3 py-3 rounded-md text-base font-medium ${
            currentPath === link.href
              ? 'bg-[#2D328D]/5 text-[#2D328D]'
              : 'text-gray-600 hover:bg-gray-50'
          }`}
        >
          {link.name}
        </a>
      ))}
    </div>
  </div>
</header>

<script>
  function initMobileMenu() {
    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');

    if (btn && menu) {
      // Remove old listeners to prevent duplicates if any (though astro:page-load usually handles fresh DOM)
      const newBtn = btn.cloneNode(true);
      btn.parentNode?.replaceChild(newBtn, btn);
      
      newBtn.addEventListener('click', () => {
        menu.classList.toggle('hidden');
      });

      // Close menu when clicking a link
      const mobileLinks = menu.querySelectorAll('a');
      mobileLinks.forEach(link => {
        link.addEventListener('click', () => {
          menu.classList.add('hidden');
        });
      });
    }
  }

  // Run on initial load
  initMobileMenu();

  // Run on subsequent navigations (Astro View Transitions)
  document.addEventListener('astro:page-load', initMobileMenu);
</script>
